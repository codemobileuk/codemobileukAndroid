<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/rl1"
        android:padding="16dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/view2"
            android:id="@+id/frame1"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image1"

                />
            <TextView
                android:layout_margin="8dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:text="00:00"
                android:id="@+id/timeStartTv1"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_color"
                android:padding="4dp"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/commonWhite"
                    android:textSize="18sp"
                    android:id="@+id/speakerTv1"
                    android:text="placeholder1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/speakerTv1"
                    android:textColor="@color/commonWhite"
                    android:textSize="14sp"
                    android:id="@+id/sessionTv1"
                    android:text="placeholder2"
                    />

            </android.support.constraint.ConstraintLayout>


        </FrameLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            >

        </View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/view2"
            android:layout_alignParentRight="true"
            android:id="@+id/frame2"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image2"
                />

            <TextView
                android:layout_margin="8dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:text="00:00"
                android:id="@+id/timeStartTv2"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_color"
                android:padding="4dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/commonWhite"
                    android:textSize="18sp"
                    android:id="@+id/speakerTv2"
                    android:text="placeholder1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/commonWhite"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/speakerTv2"
                    android:id="@+id/sessionTv2"
                    android:text="placeholder2"
                    />

            </android.support.constraint.ConstraintLayout>



        </FrameLayout>

    </RelativeLayout>
</LinearLayout>