<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@id/row"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:paddingRight="8dp"
    android:layout_gravity="top"
    android:gravity="top"
    >


        <ImageView

            android:layout_gravity="top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/speakerImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintBottom_toBottomOf="parent"
            />


    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/favorite_btn"
        app:layout_constraintLeft_toRightOf="@id/speakerImage"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speakerName"
            android:textColor="@color/textDarkGrey"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textLightGrey"
            android:id="@+id/speakerTalk"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speakerBio"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>